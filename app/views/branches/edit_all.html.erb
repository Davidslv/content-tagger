<%= display_header title: t('navigation.edit_branches'),
                   breadcrumbs: [:branches, t('navigation.edit_branches')] %>

<%= simple_form_for form, url: update_all_branches_path, method: :put do |f| %>
  <%= f.input :branches,
              collection: form.taxons_for_select,
              placeholder: "Choose branches...",
              input_html: { multiple: true, class: :select2 } %>

  <%= f.submit "Save & publish", class: "btn btn-lg btn-success submit-button" %>
<% end %>
