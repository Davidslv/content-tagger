<%= display_header title: taxon.title, breadcrumbs: [:taxons, taxon] do %>
  <%= link_to taxon_confirm_delete_path(taxon.content_id), class: 'btn btn-md btn-default' do %>
    <span class="glyphicon glyphicon-trash"></span>
    <span>
      <%= I18n.t('views.taxons.delete_taxon') %>
    </span>
  <% end %>
<% end %>

<% if parent_taxons.any? %>
  <table class="table queries-list table-bordered table-striped" data-module="filterable-table">
    <thead>
      <tr class="table-header">
        <th>Parent taxons</th>
        <th>Base path</th>
      </tr>

      <%= render partial: 'shared/table_filter' %>
    </thead>

    <tbody>
      <% parent_taxons.each do |parent_taxon| %>
        <tr>
          <td><%= link_to parent_taxon.title, taxon_path(parent_taxon.content_id) %></td>
          <td><%= link_to parent_taxon.base_path, "#{website_url('/api/content' + parent_taxon.base_path)}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<table class="table queries-list table-bordered table-striped" data-module="filterable-table">
  <thead>
    <tr class="table-header">
      <th>Title</th>
      <th>Format</th>
      <th>Actions</th>
    </tr>

    <%= render partial: 'shared/table_filter' %>
  </thead>

  <tbody>
    <%= render partial: 'tagged_content', locals: { tagged: tagged } %>
  </tbody>
</table>
