<div class='row'>
  <div class='col-md-3'>
    <%= f.input :path_prefix,
      input_html: { class: 'js-path-prefix form-control' },
      label: I18n.t('views.taxons.path_prefix'),
      collection: page.path_prefixes_for_select,
      include_blank: false %>
  </div>

  <div class='col-md-9'>
    <%= f.input :path_slug,
      input_html: { class: 'js-path-slug form-control' },
      label: I18n.t('views.taxons.path_slug') %>
  </div>
</div>

<div class='js-base-path' data-module='base-path-preview'>
  <%= I18n.t('views.taxons.preview') %> <strong class='base-path'>asdd</strong>
</div>

<%= f.input :internal_name, input_html: { class: 'form-control' },
  label: I18n.t('views.taxons.internal_name'),
  hint: I18n.t('views.taxons.internal_name_hint') %>

<%= f.input :title, input_html: { class: 'form-control' },
  label: I18n.t('views.taxons.external_name'),
  hint: I18n.t('views.taxons.displayed_on_govuk') %>

<%= f.input :description,
  as: :text,
  hint: I18n.t('views.taxons.displayed_on_govuk'),
  input_html: { class: 'form-control' } %>

<% if page.show_visibilty_checkbox? %>
  <%= f.input :visible_to_departmental_editors,
    as: :boolean,
    input_html: { class: 'form-control' },
    checked_value: 'true',
    label: I18n.t('views.taxons.visible_to_departmental_editors'),
    hint: I18n.t('views.taxons.visible_to_departmental_editors_hint')  %>
<% end %>

<%= f.input :notes_for_editors, as: :text, input_html: { class: 'form-control' } %>

<%= f.input :parent_taxons, collection: page.taxons_for_select,
  input_html: { class: :select2, multiple: true, include_blank: true } %>
