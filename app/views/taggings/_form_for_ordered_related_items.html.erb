<h3>Related content items</h3>

<p class="explain">
  Related items are displayed in the sidebar. Enter the URL or path of a GOV.UK
  page, such as /pay-vat or /benefit-cap-calculator
</p>

<% @tagging_update.ordered_related_items.each_with_index do |related_item, index| %>
  <div class="form-group related-item <%= @tagging_update.related_item_errors[related_item] ? 'has-error' : '' %>">
    <%= text_field_tag "tagging_tagging_update_form[ordered_related_items][]", related_item, class: ["form-control", "related-item-path"] %>

    <% if @tagging_update.related_item_errors[related_item] %>
      <span class="help-block"><%= @tagging_update.related_item_errors[related_item] %></span>
    <% end %>
  </div>
<% end %>
