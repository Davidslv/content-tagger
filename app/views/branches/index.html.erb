<%= display_header title: t('navigation.branches'),
                   breadcrumbs: [t('navigation.branches')] do %>

  <% if user_can_administer_taxonomy? %>
    <a href="<%= edit_all_branches_path %>"
       class="btn btn-default btn-lg pull-right"
       role="button">
      Edit branches
    </a>
  <% end %>
<% end %>

<table class="table queries-list table-bordered table-striped">
  <thead>
    <tr class="table-header">
      <th>Taxon</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% GovukTaxonomy::Branches.new.all.each do |taxon| %>
      <tr>
        <td>
           <%= taxon['title'] %>
          <br>
          <span class="text-muted"><%= taxon['base_path'] %></span>
        </td>
        <td>
          <a href="<%= taxon_path(taxon['content_id']) %>">
            View taxon
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
