<%= simple_form_for tag_migration, url: tag_migrations_path, method: :post do |f| %>
  <%= f.hidden_field :original_link_content_id %>
  <%= f.hidden_field :query %>
  <%= f.hidden_field :original_link_base_path %>

  <% if flash[:error].present? %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:error] %>
    </div>
  <% end %>

  <div class='row'>
    <div class='col-md-4'>
      <div class="form-group">
        <h3>Taxons</h3>
        <%= select_tag :taxons,
          options_from_collection_for_select(taxons, 'content_id', 'title'),
          multiple: true,
          class: :select2 %>
      </div>
      <%= f.submit "Bulk tag selected items", class: 'btn btn-md btn-success' %>
    </div>
    <div class='col-md-8'>
      <h3>Content Items</h3>
      <table class="table queries-list table-bordered" data-module="filterable-table">
        <thead>
          <tr class="table-header">
            <th data-module="select-all"><%= check_box_tag 'select_all', nil, false %></th>
            <th>Title</th>
            <th>Content ID</th>
          </tr>
        </thead>
        <tbody>
          <% expanded_links.each do |expanded_link| %>
            <tr>
              <td>
                <%= check_box_tag 'content_base_paths[]',
                  expanded_link.base_path, false, class: 'select-content-item' %>
              </td>
              <td><%= link_to expanded_link.title, website_url('/api/content' + expanded_link.base_path) %></td>
              <td><%= link_to expanded_link.content_id,
                "#{website_url('/api/content' + expanded_link.base_path)}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
